<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary_dark">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Toolbar -->
            <TextView
                android:id="@+id/toolbarTitle"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="Daily Tips"
                android:textAlignment="center"
                android:textColor="@color/text_white"
                android:textSize="34sp"
                android:textStyle="bold"
                android:gravity="center" />

            <!-- Header Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@color/primary"
                android:elevation="6dp"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="🎯 Today's Focus"
                    android:textColor="@color/text_white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Boost your academic performance with these proven study techniques."
                    android:textColor="@color/text_white"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- Tips Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Study Techniques"
                android:textColor="@color/text_white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- Tip Card 1: Time Blocking -->
            <LinearLayout
                android:id="@+id/tipCard1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/card_background"
                android:clickable="true"
                android:focusable="true"
                android:elevation="4dp"
                android:orientation="horizontal"
                android:padding="20dp">

                <!-- Icon Container -->
                <TextView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/primary_light"
                    android:gravity="center"
                    android:text="⏰"
                    android:textSize="32sp" />

                <!-- Content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="Time Blocking"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Allocate specific time blocks for different subjects to maximize focus and productivity."
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Arrow -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="→"
                    android:textColor="@color/text_secondary"
                    android:textSize="20sp" />

            </LinearLayout>

            <!-- Tip Card 2: Spaced Repetition -->
            <LinearLayout
                android:id="@+id/tipCard2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/card_background"
                android:clickable="true"
                android:focusable="true"
                android:elevation="4dp"
                android:orientation="horizontal"
                android:padding="20dp">

                <!-- Icon Container -->
                <TextView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/primary_light"
                    android:gravity="center"
                    android:text="📅"
                    android:textSize="32sp" />

                <!-- Content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="Spaced Repetition"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Review material at increasing intervals to improve long-term retention."
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Arrow -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="→"
                    android:textColor="@color/text_secondary"
                    android:textSize="20sp" />

            </LinearLayout>

            <!-- Tip Card 3: Active Recall -->
            <LinearLayout
                android:id="@+id/tipCard3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/card_background"
                android:clickable="true"
                android:focusable="true"
                android:elevation="4dp"
                android:orientation="horizontal"
                android:padding="20dp">

                <!-- Icon Container -->
                <TextView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/primary_light"
                    android:gravity="center"
                    android:text="🧠"
                    android:textSize="32sp" />

                <!-- Content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="Active Recall"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Test yourself on material instead of passive re-reading for better understanding."
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Arrow -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="→"
                    android:textColor="@color/text_secondary"
                    android:textSize="20sp" />

            </LinearLayout>

            <!-- Tip Card 4: Pomodoro Technique -->
            <LinearLayout
                android:id="@+id/tipCard4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/card_background"
                android:clickable="true"
                android:focusable="true"
                android:elevation="4dp"
                android:orientation="horizontal"
                android:padding="20dp">

                <!-- Icon Container -->
                <TextView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/primary_light"
                    android:gravity="center"
                    android:text="🍅"
                    android:textSize="32sp" />

                <!-- Content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="Pomodoro Technique"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Work in focused 25-minute intervals with 5-minute breaks to maintain concentration."
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Arrow -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="→"
                    android:textColor="@color/text_secondary"
                    android:textSize="20sp" />

            </LinearLayout>

            <!-- Tip Card 5: Note Taking -->
            <LinearLayout
                android:id="@+id/tipCard5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/card_background"
                android:clickable="true"
                android:focusable="true"
                android:elevation="4dp"
                android:orientation="horizontal"
                android:padding="20dp">

                <!-- Icon Container -->
                <TextView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/primary_light"
                    android:gravity="center"
                    android:text="📝"
                    android:textSize="32sp" />

                <!-- Content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="Effective Note Taking"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Use the Cornell method or mind mapping to organize and retain information better."
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Arrow -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="→"
                    android:textColor="@color/text_secondary"
                    android:textSize="20sp" />

            </LinearLayout>

            <!-- Daily Challenge Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:text="Today's Challenge"
                android:textColor="@color/text_white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- Challenge Card -->
            <LinearLayout
                android:id="@+id/challengeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@color/card_background"
                android:clickable="true"
                android:focusable="true"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="📚 Try Time Blocking Today"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/accent"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:text="+50 XP"
                        android:textColor="@color/text_white"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Block 2 hours of focused study time for your most challenging subject today."
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnAcceptChallenge"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/primary"
                    android:text="Accept Challenge"
                    android:textColor="@color/text_white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">

        <!-- Home Tab -->
        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/home"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:srcCompat="@drawable/h1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Tips Tab (Active) -->
        <LinearLayout
            android:id="@+id/navQuests"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/tips"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:srcCompat="@drawable/q2_removebg_preview" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tips"
                android:textColor="@color/primary"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Goals Tab -->
        <LinearLayout
            android:id="@+id/navAchievements"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/goals"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:srcCompat="@drawable/s1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goals"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Profile Tab -->
        <LinearLayout
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:srcCompat="@drawable/p1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>